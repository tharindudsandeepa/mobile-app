<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:background="#5DB075" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:width="178dp"
        android:height="178dp"
        android:background="@drawable/circle"
        />
    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/menu"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Menu"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:src="@drawable/image1"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/profile"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:id="@+id/logout"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="310dp"
        />
    <TextView
        android:id="@+id/victoria_ro"
        android:layout_width="272dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="248dp"
        android:text="victoria Robertson"
        android:gravity="center_horizontal|top"
        android:textSize="28sp"
        android:textColor="#000000"

        />
    <TextView
        android:id="@+id/a_mantra_go"
        android:layout_width="272dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="285sp"
        android:text="A mantra goes here"
        android:gravity="center_horizontal|top"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
</RelativeLayout>